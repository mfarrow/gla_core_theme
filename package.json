{
  "name": "gla-accelerator-theme",
  "private": true,
  "scripts": {
    "build": "run-p build:**",
    "build-prod": "NODE_ENV=production run-s build",
    "build-storybook": "build-storybook",
    "build:css": "run-s scss postcss",
    "postcss": "postcss ./dist/*.css ./dist/**/*.css --replace --map",
    "scss": "node-sass --output-style compressed --include-path libraries --importer node_modules/node-sass-magic-importer/dist/cli.js --source-map true --output dist components",
    "storybook": "start-storybook -c storybook/.storybook -s ../dist/",
    "tidy": "npx sort-package-json"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "breakpoint-sass": "^2.7.1",
    "cssnano": "^5.0.6",
    "node-sass-chokidar": "^1.5.0",
    "node-sass-magic-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cachebuster": "^0.1.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-em-media-query": "^4.1.0",
    "postcss-font-display": "^0.2.1",
    "postcss-load-plugins": "^2.3.0",
    "postcss-momentum-scrolling": "^3.13.22",
    "postcss-pxtorem": "^6.0.0",
    "postcss-round-subpixels": "^2.0.0",
    "tailwindcss": "^2.2.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-controls": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-viewport": "^6.3.4",
    "@storybook/html": "^6.3.4",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "drupal-attribute": "1.0.2",
    "storybook-addon-designs": "6.0.1",
    "twing": "^2.3.7",
    "twing-loader": "^2.0.2"
  }
}
