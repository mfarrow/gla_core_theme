{
  "name": "gla-core-theme",
  "private": true,
  "license": "OGL-3.0",
  "scripts": {
    "babel": "run-p babel:**",
    "babel:components": "babel './components' --source-maps --out-dir dist",
    "clean": "mkdir -p dist && del-cli 'dist/**/*' '!dist/img' '!dist/img/favicons/**' '!dist/lodash.min.js' '!dist/lodash.js' '!dist/modernizr.js'",
    "prebuild": "run-s clean -s",
    "build": "run-p build:**",
    "build-prod": "NODE_ENV=production run-s build storybook:build-static-prod",
    "prebuild:css": "node scripts/generate-design-tokens.js",
    "build:css": "run-s scss postcss",
    "build:icons": "run-s icons",
    "build:js": "run-s babel",
    "format": "run-p format:**",
    "format:package-json": "npx sort-package-json",
    "format:prettier": "prettier --write --loglevel warn '*.{js,json,scss,md,yml,yaml}' './components/**/*.{js,json,scss,md,yml,yaml,story.js,story.mdx}'",
    "icons": "node scripts/generate-svg-sprite.js && node scripts/generate-icons-list.js",
    "lint": "run-s lint:**",
    "lint:eslint": "eslint --fix '*.js' './components/**/*.{js,story.js}' --cache",
    "lint:stylelint": "stylelint --fix './components/**/*.scss' --cache",
    "postcss": "postcss ./dist/*.css ./dist/**/*.css --replace --map",
    "scss": "node-sass --output-style compressed --include-path libraries --importer node_modules/node-sass-magic-importer/dist/cli.js --source-map true --output dist components",
    "prestorybook:start": "node scripts/generate-design-tokens.js",
    "storybook:start": "start-storybook -c storybook/.storybook -s dist:dist,tokens:tokens,components:components",
    "storybook:build-static": "build-storybook -c storybook/.storybook -s dist:dist,tokens:tokens,components:components -o ./storybook/static",
    "storybook:build-static-prod": "if [ \"$NODE_ENV\" = \"production\" ] && [ -z \"$npm_config_skip_storybook\" ]; then npm run storybook:build-static; fi",
    "tidy": "sort-package-json",
    "watch": "npm run build && run-p storybook:start watch:**",
    "watch:icons": "onchange -k './src/icons/**/*.svg' -- onerror \"run-s icons\" --title \"There was an icons-related error\"",
    "watch:js": "onchange -k './components/**/*.js' -e './components/**/*.story.js' -- onerror \"run-s build:js\" --title \"There was a JS formatting or syntax error\"",
    "watch:scss": "onchange -k './components/**/*.scss' -- onerror \"run-s build:css\" --title \"There was a CSS/SCSS/Postcss error\"",
    "watch:stories": "onchange -k './components/**/*.story.js' './tokens/*.story.mdx' -- onerror \"run-s build:css\" --title \"There was a CSS/SCSS/Postcss error\"",
    "watch:tailwind": "onchange -k './tailwind.config.js' -- onerror \"npm run-s build:css\" --title \"There was a CSS/SCSS/Postcss error\""
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@comandeer/babel-plugin-banner": "^4.1.0",
    "@storybook/addon-a11y": "^6.3.6",
    "@storybook/addon-controls": "^6.3.6",
    "@storybook/addon-docs": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-viewport": "^6.3.6",
    "@storybook/html": "^6.3.6",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "autoprefixer": "^10.2.6",
    "babel-preset-minify": "^0.5.1",
    "breakpoint-sass": "^2.7.1",
    "cli-error-notifier": "^2.1.0",
    "cssnano": "^5.0.6",
    "del-cli": "^4.0.0",
    "drupal-attribute": "^1.0.2",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "globby": "^11.0.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "node-sass": "^6.0.1",
    "node-sass-magic-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.5",
    "postcss-cachebuster": "^0.1.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-em-media-query": "^4.1.0",
    "postcss-font-display": "^0.2.1",
    "postcss-load-plugins": "^2.3.0",
    "postcss-momentum-scrolling": "^3.13.22",
    "postcss-pxtorem": "^6.0.0",
    "postcss-round-subpixels": "^2.0.0",
    "sort-package-json": "^1.50.0",
    "storybook-addon-designs": "^6.0.1",
    "storybook-addon-pseudo-states": "^1.0.0",
    "style-dictionary": "^3.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.20.1",
    "svg-sprite": "^1.5.0",
    "tailwindcss": "^2.2.4",
    "ts-dedent": "^2.1.1",
    "twing": "^2.3.7",
    "twing-loader": "^2.0.2",
    "typi": "^3.2.0"
  }
}
