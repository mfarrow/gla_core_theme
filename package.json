{
  "name": "gla-accelerator-theme",
  "private": true,
  "scripts": {
    "babel": "run-p babel:**",
    "babel:components": "babel './components' --source-maps --out-dir dist",
    "clean": "mkdir -p dist && del-cli 'dist/**/*' '!dist/img' '!dist/img/favicons/**' '!dist/lodash.min.js' '!dist/lodash.js' '!dist/modernizr.js'",
    "prebuild": "run-s clean -s",
    "build": "run-p build:**",
    "build-prod": "NODE_ENV=production run-s build",
    "build:css": "run-s scss postcss",
    "build:js": "run-s babel",
    "build:storybook-static": "if [ \"$NODE_ENV\" == \"production\" ] && [ -z \"$npm_config_skip_storybook\" ]; then npm run storybook:build-static; fi",
    "prebuild:css": "node scripts/generate-design-tokens.js",
    "postcss": "postcss ./dist/*.css ./dist/**/*.css --replace --map",
    "scss": "node-sass --output-style compressed --include-path libraries --importer node_modules/node-sass-magic-importer/dist/cli.js --source-map true --output dist components",
    "prestorybook:start": "node scripts/generate-design-tokens.js",
    "storybook:start": "start-storybook -c storybook/.storybook -s dist:/dist,tokens:/tokens",
    "storybook:build-static": "build-storybook -c storybook/.storybook -s dist:/dist,tokens:/tokens -o ./storybook/static",
    "tidy": "sort-package-json"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@comandeer/babel-plugin-banner": "^4.1.0",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.6",
    "babel-preset-minify": "^0.5.1",
    "breakpoint-sass": "^2.7.1",
    "cssnano": "^5.0.6",
    "del-cli": "^4.0.0",
    "lodash": "^4.17.21",
    "node-sass-chokidar": "^1.5.0",
    "node-sass-magic-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cachebuster": "^0.1.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-em-media-query": "^4.1.0",
    "postcss-font-display": "^0.2.1",
    "postcss-load-plugins": "^2.3.0",
    "postcss-momentum-scrolling": "^3.13.22",
    "postcss-pxtorem": "^6.0.0",
    "postcss-round-subpixels": "^2.0.0",
    "sort-package-json": "^1.50.0",
    "storybook-addon-pseudo-states": "^1.0.0",
    "style-dictionary": "^3.0.1",
    "tailwindcss": "^2.2.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-controls": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-viewport": "^6.3.4",
    "@storybook/html": "^6.3.4",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "drupal-attribute": "1.0.2",
    "storybook-addon-designs": "6.0.1",
    "twing": "^2.3.7",
    "twing-loader": "^2.0.2"
  }
}
