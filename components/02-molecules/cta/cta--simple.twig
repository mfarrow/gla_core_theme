{% set heading_element = heading_element|default('h3') %}

<div class="cta cta--simple u-bg-off-white u-bg-off-white u-p-6 u-space-y-4 sm:u-py-10 sm:u-px-12 md:u-flex md:u-items-center md:u-justify-between md:u-space-y-0 md:u-px-16 md:u-space-x-5 lg:u-space-x-7">
  <{{ heading_element}} class="cta__heading h5">{{ content }}</{{ heading_element }}>

  {% include "@atoms/button/button.twig" with {
    button_content: button_content,
    button_url: button_url,
    button_type: 'compact',
    attributes: create_attribute().addClass([
      'lg:u-flex-shrink-0',
      'u-max-w-prose',
    ])
  } only %}
</div>
